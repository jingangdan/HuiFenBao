<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="#000">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_margin="10px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="慧分宝还款记录"
            android:textColor="#fff"
            android:textSize="38px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5px"
            android:text="身份证号："
            android:textColor="#000"
            android:textSize="24px" />

        <AutoCompleteTextView
            android:id="@+id/actvIdcards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kuang_style"
            android:hint="请输入身份证号，将作为唯一凭证"
            android:padding="15px"
            android:textSize="24px"
            android:textColorHint="#707070"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/butSeeRecord"
            android:paddingRight="10px"
            android:paddingLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="64px"
            android:layout_margin="24px"
            android:background="@drawable/kuang_green"
            android:text="查看还款记录"
            android:textColor="#fff"
            android:textSize="24px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:text="查询结果" />

        <TextView
            android:id="@+id/tvNoRecord"
            android:visibility="gone"
            android:padding="15px"
            android:background="@drawable/kuang_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="没有记录"/>

        <ListView
            android:divider="#fff"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

</LinearLayout>
