<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:background="#000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="支付结果"
            android:textColor="#fff"
            android:textSize="38px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24px">

        <ImageView
            android:layout_width="180px"
            android:layout_height="180px"
            android:src="@mipmap/ic_success" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            android:textColor="#000"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tvPROrdersn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="#000"
            android:textSize="24px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝交易号："
            android:textColor="#000"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tvZOrdersn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:textColor="#000"
            android:textSize="24px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款金额："
            android:textColor="#000"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tvPRMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3px"
            android:text="123"
            android:textColor="#ff0000"
            android:textSize="36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 元"
            android:textColor="#000"
            android:textSize="24px" />

    </LinearLayout>

    <Button
        android:id="@+id/butGoShouYe"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:layout_margin="24px"
        android:background="@drawable/kuang_green2"
        android:text="返回首页"
        android:textColor="#5CB85C" />

    <Button
        android:id="@+id/butGoSeeRecord"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:layout_margin="24px"
        android:background="@drawable/kuang_green2"
        android:text="查询还款记录"
        android:textColor="#5CB85C" />


</LinearLayout>
